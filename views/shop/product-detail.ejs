<% include('../includes/functions.ejs') %> <%- include('../includes/head.ejs')
%>
<body>
    <%- include('../includes/header-nav.ejs') %>

    <main class="container">
        <h1 class="text-center mb-1" style="height: 45px;">
            <%= product.title || 'New Book' %>
        </h1>
        <hr />
        <div class="row justify-center">
            <div class="col justify-center p-3">
                <% if(product.price > 0) { %>
                <h3 class="text-center">
                    <%= formatCentsToDollars(product.price) %>
                </h3>
                <% } else { %>
                <h3 class="text-center">Free</h3>
                <% } %>
                <p><%= product.description || 'No description' %></p>
            </div>
            <div class="col justify-center align-center p-3">
                <img
                    src="<%= product.imageUri %>"
                    alt="<% product.title %>"
                    style="height: 150px; width: 100px;"
                />
            </div>
        </div>

        <%- include('../includes/addToCartButton.ejs') %>
    </main>
</body>

<%- include('../includes/footer.ejs') %>
