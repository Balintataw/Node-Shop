<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/header-nav.ejs') %>

  <main>
    <form class="container" action="/admin/edit_product" method="POST">
      <input
        type="text"
        name="title"
        placeholder="Title"
        value="<%= product.title %>"
      />
      <input
        type="number"
        name="price"
        placeholder="Price"
        step="0.01"
        value="<%= product.price %>"
      />
      <textarea
        type="text"
        name="description"
        placeholder="No Description"
        rows="4"
      ><%= product.description %></textarea>
      <input type="file" name="imageUri" value="<%= product.imageUri %>" />
      <input type="hidden" name="id" value="<%= product._id %>" />
      <button class="btn btn-linear" type="submit">
        Save
      </button>
    </form>
  </main>
</body>

<%- include('../includes/footer.ejs') %>
